@model CoverPage.Models.CoverPageModel

@{
    ViewData["Title"] = "Generate Cover Page";
}

<div class="min-h-screen bg-gray-50 py-10">
    <div class="max-w-6xl mx-auto px-4">

        <!-- PAGE TITLE -->
        <div class="text-center mb-10">
            <h1 class="text-3xl font-bold text-gray-800">
                Lab Report Cover Page Generator
            </h1>
            <p class="text-gray-600 mt-2">
                Fill the details and preview your cover page instantly
            </p>
        </div>

        <!-- MAIN GRID -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

            <div class="bg-white rounded-xl shadow-sm border p-8">

                <h2 class="text-xl font-semibold mb-6 text-gray-800">
                    Enter Details
                </h2>

                <form asp-action="Download" method="post" class="space-y-5">

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Student Name
                        </label>
                        <input asp-for="StudentName"
                               class="w-full rounded-lg border px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                               placeholder="Enter student name" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Roll Number
                        </label>
                        <input asp-for="RollNumber"
                               class="w-full rounded-lg border px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                               placeholder="Enter roll number" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Subject Name
                        </label>
                        <input asp-for="SubjectName"
                               class="w-full rounded-lg border px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                               placeholder="Enter subject name" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Teacher Name
                        </label>
                        <input asp-for="TeacherName"
                               class="w-full rounded-lg border px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                               placeholder="Enter teacher name" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Submission Date
                        </label>
                        <input asp-for="SubmissionDate"
                               type="date"
                               class="w-full rounded-lg border px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <div class="pt-4">
                        <button type="submit"
                                class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold
                                       hover:bg-blue-700 transition">
                            Generate Cover Page
                        </button>
                    </div>
                </form>
            </div>
            <!-- ================= RIGHT: PDF PREVIEW ================= -->
            <div class="bg-white rounded-xl shadow-sm border p-6 flex flex-col">

                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-lg font-semibold text-gray-800">
                        Sample Cover Page (PDF)
                    </h2>
                    <span class="text-xs px-3 py-1 rounded-full bg-blue-100 text-blue-700">
                        Preview
                    </span>
                </div>

                <!-- Responsive Preview Wrapper -->
                <div class="flex-1 w-full border rounded-lg overflow-hidden
                sm:min-h-[70vh]">

                    <iframe src="~/images/sample.pdf"
                            class="w-full h-full"
                            style="border:0;"
                            loading="lazy">
                    </iframe>
                </div>

                <p class="text-xs text-gray-500 mt-3 text-center">
                    * Generated DOCX will follow this layout
                </p>
            </div>

        </div>
    </div>
</div>

