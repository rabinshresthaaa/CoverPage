@model CoverPage.Models.CoverPageModel

@{
    ViewData["Title"] = "Generate Cover Page";
}

<div class="min-h-screen bg-gray-50 py-10">
    <div class="max-w-6xl mx-auto px-4">

        <!-- PAGE TITLE -->
        <div class="text-center mb-10">
            <h1 class="text-3xl font-bold text-gray-800">
                Lab Report Cover Page Generator
            </h1>
            <p class="text-gray-600 mt-2">
                Fill the details and preview your cover page instantly
            </p>
        </div>

        <!-- MAIN GRID -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

            <!-- ================= LEFT: FORM ================= -->
            <div class="bg-white rounded-xl shadow-sm border p-8">

                <h2 class="text-xl font-semibold mb-6 text-gray-800">
                    Enter Details
                </h2>

                <form asp-action="Download" method="post" class="space-y-5">

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Student Name
                        </label>
                        <input asp-for="StudentName"
                               class="w-full rounded-lg border px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                               placeholder="Enter student name" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Roll Number
                        </label>
                        <input asp-for="RollNumber"
                               class="w-full rounded-lg border px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                               placeholder="Enter roll number" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Subject Name
                        </label>
                        <input asp-for="SubjectName"
                               class="w-full rounded-lg border px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                               placeholder="Enter subject name" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Teacher Name
                        </label>
                        <input asp-for="TeacherName"
                               class="w-full rounded-lg border px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                               placeholder="Enter teacher name" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Submission Date
                        </label>
                        <input asp-for="SubmissionDate"
                               type="date"
                               class="w-full rounded-lg border px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <div class="pt-4">
                        <button type="submit"
                                class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold
                                       hover:bg-blue-700 transition">
                            Generate Cover Page
                        </button>
                    </div>
                </form>
            </div>

            <!-- ================= RIGHT: LIVE PREVIEW ================= -->
            <div class="bg-white rounded-xl shadow-sm border p-8 flex flex-col">

                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-xl font-semibold text-gray-800">
                        Live Preview
                    </h2>
                    <span class="text-xs px-3 py-1 rounded-full bg-green-100 text-green-700">
                        Live
                    </span>
                </div>

                <!-- Preview Container -->
                <div class="flex-1 flex items-center justify-center bg-gray-100 rounded-lg border p-6">

                    <!-- Preview Paper -->
                    <div class="w-[320px] h-[450px] bg-white border shadow-md p-5
                                flex flex-col text-center text-sm font-[Times_New_Roman]">

                        <p class="font-bold text-base">TRIBHUVAN UNIVERSITY</p>
                        <p class="font-semibold">Institute of Science and Technology</p>
                        <p class="font-semibold mb-2">Amrit Science Campus</p>

                        <!-- Logo Placeholder -->
                        <div class="w-14 h-14 mx-auto my-2 border rounded-full
                                    flex items-center justify-center text-xs font-bold">
                            TU
                        </div>

                        <!-- Decorative Lines -->
                        <div class="flex justify-center gap-2 my-2">
                            <div class="h-10 w-[2px] bg-gray-800"></div>
                            <div class="h-16 w-[2px] bg-gray-800"></div>
                            <div class="h-10 w-[2px] bg-gray-800"></div>
                        </div>

                        <!-- Subject -->
                        <p id="pv-subject" class="font-bold mt-3">
                            Subject Name
                        </p>
                        <p class="italic">Lab Report</p>

                        <!-- Submitted Section -->
                        <div class="flex justify-between text-left mt-6 text-xs">
                            <div>
                                <p class="font-bold underline">Submitted By</p>
                                <p id="pv-name">Name</p>
                                <p id="pv-roll">Roll</p>
                                <p id="pv-date">Date</p>
                            </div>

                            <div class="text-right">
                                <p class="font-bold underline">Submitted To</p>
                                <p id="pv-teacher" class="underline">Teacher</p>
                                <p>Department of CSIT</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        function bindLivePreview(inputId, previewId, formatter = v => v || '—') {
            const input = document.getElementById(inputId);
            const preview = document.getElementById(previewId);
            if (!input || !preview) return;

            const update = () => preview.innerText = formatter(input.value);
            input.addEventListener('input', update);
            update();
        }

        bindLivePreview("StudentName", "pv-name");
        bindLivePreview("RollNumber", "pv-roll");
        bindLivePreview("SubjectName", "pv-subject");
        bindLivePreview("TeacherName", "pv-teacher");
        bindLivePreview("SubmissionDate", "pv-date", v =>
            v ? new Date(v).toLocaleDateString() : '—'
        );
    </script>
}
