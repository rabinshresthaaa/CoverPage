@{
    ViewData["Title"] = "Home";
}

<div class="max-w-5xl mx-auto px-6 py-20 text-center">

    <h1 class="text-4xl font-extrabold mb-4">
        Academic Cover Pages
        <span class="text-blue-600 block mt-2">
            Made Simple
        </span>
    </h1>

    <p class="text-gray-600 max-w-xl mx-auto mb-10 text-lg">
        Generate clean, professional A4 cover pages for lab reports,
        projects, and academic submissions in seconds.
    </p>

    <a asp-controller="CoverPage"
       asp-action="Index"
       class="inline-flex items-center gap-2 px-8 py-3 text-white font-semibold rounded-lg
              bg-blue-600 hover:bg-blue-700 transition">
        Create Cover Page
    </a>

</div>
